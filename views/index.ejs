<link rel="stylesheet" href="/style.css">
<div class="header">
    <h1>Pokedex</h1>
</div>
<a href="/pokemon/new"> <button class="newPokemon"> Add a New Pokemon</button></a>



<div id="pokemonList">
    <% Pokemon.forEach((pokemon, index) => { %>
        <div class="pokemon-card">
            <a href="/pokemon/<%= index %>"><img src="<%= pokemon.img%>" alt="<%= pokemon.name %>"></a>
        
            <p>Pokemon: <%= pokemon.name%></p> 
            <p>Type:<% pokemon.type.forEach((type, index) => { %>
              <%= type %><%= index < pokemon.type.length - 1 ? ', ' : '' %>
            <% }) %></p>
            <p>HP: <%= pokemon.stats.hp %></p>
            <p>Attack: <%= pokemon.stats.attack %></p>
            <p>Defense: <%= pokemon.stats.defense %></p>
                
        </div>
           
        
        <div id="button">
        <form action="/pokemon/<%= index %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete">
        </form>
        <a href="/pokemon/<%= index %>/edit">
          <button>Edit Pokemon</button>
        </a>
      </div>
            
                
        
    <% }) %>
</div>



</html>
